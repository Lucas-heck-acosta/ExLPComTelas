<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exerciciotelas.classesobjetostelas.FogaoController">
    <children>
        <Label text="Controle do Fogão" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Button fx:id="btnLigarDesligar" text="Ligar/Desligar Fogão" onAction="#ligarDesligar" prefHeight="60.0" prefWidth="200.0" />
        <Button fx:id="btnAbrirFechar" text="Abrir/Fechar Tampa" onAction="#abrirFecharTampa" prefHeight="60.0" prefWidth="200.0" />
        <Button fx:id="btnAumentarTemperatura" text="Aumentar Temperatura" onAction="#aumentarTemperatura" prefHeight="60.0" prefWidth="200.0" />

        <Label fx:id="lblStatus" text="Status do Fogão" />
    </children>
</VBox>
