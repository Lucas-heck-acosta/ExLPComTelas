    <Label layoutX="50.0" layoutY="50.0" text="Numerador:" />
    <TextField fx:id="txtNumerador" layoutX="150.0" layoutY="50.0" promptText="Digite o numerador" />

    <Label layoutX="50.0" layoutY="100.0" text="Denominador:" />
    <TextField fx:id="txtDenominador" layoutX="150.0" layoutY="100.0" promptText="Digite o denominador" />

    <Button fx:id="btnSoma" layoutX="50.0" layoutY="150.0" text="Somar" />
    <Button fx:id="btnSubtrair" layoutX="150.0" layoutY="150.0" text="Subtrair" />
    <Button fx:id="btnMultiplicar" layoutX="250.0" layoutY="150.0" text="Multiplicar" />
    <Button fx:id="btnDividir" layoutX="350.0" layoutY="150.0" text="Dividir" />

    <Label layoutX="50.0" layoutY="200.0" text="Resultado:" />
    <Label fx:id="lblResultado" layoutX="150.0" layoutY="200.0" text="" />

</AnchorPane>
