<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="236.0" prefWidth="434.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exerciciotelas.classesobjetostelas.CalculatorController">

    <!-- Numerador input -->
    <Label layoutX="50.0" layoutY="50.0" text="Numerador:" />
    <TextField fx:id="numeradorField" layoutX="150.0" layoutY="50.0" promptText="Digite o numerador" />

    <!-- Denominador input -->
    <Label layoutX="50.0" layoutY="100.0" text="Denominador:" />
    <TextField fx:id="denominadorField" layoutX="150.0" layoutY="100.0" promptText="Digite o denominador" />

    <!-- Buttons for operations -->
    <Button fx:id="somaBtn" layoutX="50.0" layoutY="150.0" text="Somar" />
    <Button fx:id="subtrairBtn" layoutX="150.0" layoutY="150.0" text="Subtrair" />
    <Button fx:id="multiplicarBtn" layoutX="250.0" layoutY="150.0" text="Multiplicar" />
    <Button fx:id="dividirBtn" layoutX="350.0" layoutY="150.0" text="Dividir" />

    <!-- Label to display results -->
    <Label layoutX="50.0" layoutY="200.0" text="Resultado:" />
    <Label fx:id="resultadoLabel" layoutX="150.0" layoutY="200.0" text="" />

</AnchorPane>
